@page
@model PetMatch.Pages.Animals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].RescueDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Animal)
{
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RescueDate)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> <span>|</span>
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> <span>|</span>
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    }
                    else
                    {
                        <a asp-page="./Details" asp-route-id="@item.ID">Vezi Detalii</a> <span>|</span>

                        <a asp-page="/AdoptionRequests/Create"
                           asp-route-animalId="@item.ID"
                           class="btn btn-success btn-sm">
                            Adoptă!
                        </a>
                    }
                </td>
            </tr>
        }
